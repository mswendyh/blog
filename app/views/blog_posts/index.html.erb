<h1>All Blog Posts</h1>

  <div class="row">
    <% @blog_posts.each do |blog_post| %>
      <div class="col-md-4">
       <div class="panel panel-default">
        <div class="panel-body">
         <h2><%= blog_post.title %></h2>
         <h3<%= blog_post.body %></h3>
         <% if blog_post.avatar_file_name != nil %>
              <%= image_tag blog_post.avatar.url(:medium) %>
            <% end %>

         <div class="btn-group">
          <%= link_to 'Show', blog_post, class: "btn btn-default" %>
          <%= link_to 'Edit', edit_blog_post_path(blog_post), class: "btn btn-default" %>
          <%= link_to 'Destroy', blog_post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
         </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= link_to 'New Blog post', new_blog_post_path %>
