<section id="blog">
<h2>Blog</h2>

  <div class="row">
    <% @blog_posts.sort.reverse.each do |blog_post| %>
      <div class="col-md-6">
        <div class="panel panel-success">
          <div class="panel-heading">
            <h3><%= blog_post.title %></h3>
          </div>
            <div class="panel-body"
              <p><% if blog_post.avatar_file_name != nil %>
                <%= image_tag blog_post.avatar.url(:medium) %>
              <% end %></p>
              <p><%= blog_post.body %></p>

              <div class="btn-group">
                <%= link_to 'Show', blog_post, class: "btn btn-default" %>
                <%= link_to 'Edit', edit_blog_post_path(blog_post), class: "btn btn-default" %>
                <%= link_to 'Destroy', blog_post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
              </div>
            </div>
          </div>
    </div>
  <% end %>
</div>

<%= link_to 'New Blog post', new_blog_post_path %>
</section>
